# =============================================================================
# JalWiKi Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values.
# ⚠ Never commit .env with real secrets to version control!
# =============================================================================

# =============================================================================
# General Settings
# =============================================================================
ENV=development   # or production
DEBUG=True
SECRET_KEY=CHANGE_ME_SECRET_KEY

# Comma-separated allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database Configuration
# =============================================================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=jalwiki
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_DB_PASSWORD
DB_HOST=localhost
DB_PORT=5432

# Alternative (for local development only):
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET
JWT_ACCESS_TOKEN_LIFETIME_HOURS=24
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# AI Integration
# =============================================================================
GEMINI_API_KEY=CHANGE_ME_GEMINI_KEY

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=CHANGE_ME_EMAIL_PASSWORD

# =============================================================================
# Static & Media Files
# =============================================================================
STATIC_URL=/static/
MEDIA_URL=/media/

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGIN_ALLOW_ALL=False   # ⚠ Set to True only for development

# =============================================================================
# Security (Production)
# =============================================================================
DEBUG_TOOLBAR=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
# Optional: log file path
# LOG_FILE=logs/django.log

# =============================================================================
# Redis / Celery (Optional, for caching & tasks)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
